<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/regsitration_background"
    tools:context=".RegistrationForm">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="12dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">


            <TextView
                android:id="@+id/textView"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Registration!"
                android:textSize="32sp"
                android:textStyle = "bold"
                android:textColor = "#FF000000"/>
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/FirstName"
            android:layout_width="390dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rectangle_border"
            android:hint="First Name"
            android:padding="18dp"
            android:textColor="#000000" />
        <EditText
            android:id="@+id/LastNAME"
            android:layout_width="390dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rectangle_border"
            android:hint="Last Name"
            android:padding="18dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/enterEmail"
            android:layout_width="390dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rectangle_border"
            android:hint="Email"
            android:padding="18dp"
            android:layout_marginRight="10dp"
            android:textColor="#000000" />
        <EditText
            android:id="@+id/ContactNo"
            android:layout_width="390dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_border"
            android:hint="Contact No"
            android:padding="18dp"
            android:textColor="#000000" />
        <EditText
            android:id="@+id/Degree"
            android:layout_width="390dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rectangle_border"
            android:hint="Degree"
            android:layout_marginRight="10dp"
            android:padding="18dp"
            android:textColor="#000000" />
        <EditText
            android:id="@+id/specialization"
            android:layout_width="390dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_border"
            android:hint="specialization"
            android:padding="18dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/Currentcgpa"
            android:layout_width="390dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rectangle_border"
            android:hint="Current cgpa"
            android:layout_marginRight="10dp"
            android:padding="18dp"
            android:textColor="#000000" />
        <EditText
            android:id="@+id/Address"
            android:layout_width="390dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_border"
            android:hint="Current address"
            android:padding="18dp"
            android:textColor="#000000"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/uploadpp"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:text="Upload Profile picture"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/profilepic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/image_icon" />
    </LinearLayout>
        <Button
            android:id="@+id/continuebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFA915EE"
            android:padding="20dp"
            android:gravity = "center"
            android:paddingLeft="12dp"
            android:text="Continue"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textStyle="bold"
            app:cornerRadius="30dp"/>

    </LinearLayout>
</ScrollView>